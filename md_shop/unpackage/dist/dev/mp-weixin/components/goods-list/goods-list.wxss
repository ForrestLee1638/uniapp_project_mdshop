.goods_list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 0 15rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.goods_list .goods_item {
  background-color: #fff;
  width: 355rpx;
  margin-top: 15rpx;
}
.goods_list .goods_item image {
  display: block;
  margin: 0 auto;
  width: 60%;
  height: 120px;
}
.goods_list .price {
  color: #b50e03;
  font-size: 36rpx;
  margin: 20rpx 0 10rpx 0;
}
.goods_list .price text:nth-child(2) {
  color: #ccc;
  font-size: 28rpx;
  margin-left: 17rpx;
  text-decoration: line-through;
}
.goods_list .name {
  font-size: 28rpx;
  line-height: 50rpx;
  padding-bottom: 15rpx;
  padding-top: 10rpx;
}

